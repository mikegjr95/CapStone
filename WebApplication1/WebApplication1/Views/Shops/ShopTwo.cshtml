@model WebApplication1.Models.Shop
@{
    ViewBag.Title = "ShopTwo";
}


<h2>Porsche</h2>
<link rel="stylesheet" href="~/Content/main.css" />
<html>
<head>
    <title>nope</title>
    <link rel="stylesheet" href="~/Scripts/style.min.css">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>

    <!-- Header -->
    <!-- Banner -->
    <section id="bannerTwo">
        <div class="inner">
            <header>
                <h1>Welcome To Porsche</h1>
                <p>The Beginning Of Speed</p>
                <div>@Html.DisplayNameFor(model => model.StateP) : @Html.DisplayFor(model => model.StateP)</div>
                <div>@Html.DisplayNameFor(model => model.ZipP) : @Html.DisplayFor(model => model.ZipP)</div>
                <div>@Html.DisplayNameFor(model => model.StreetP) : @Html.DisplayFor(model => model.StreetP)</div>
            </header>
            <a href="#main" class="button big scrolly">Learn More</a>
        </div>
    </section>

    <!-- Main -->
    <div id="main">

        <!-- Section -->
        <section class="wrapper style2">
            <div class="inner">
                <!-- 2 Columns -->
                <div class="flex flex-2">
                    <div class="col col1">
                        <div class="image round fit">
                            <a href="generic.html" class="link"><img src="~/Content/Porsche2.jpg" alt="" /></a>
                        </div>
                    </div>
                    <div class="col col2">
                        <h3>Quality built in and out</h3>
                        <p>vrrooom vrrrom vrrroooo o ororo oro ro oror mmrororor oro rom ormor m orm</p>
                        <a href="#" class="button">Learn More</a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Section -->
        <section class="wrapper style1">
            <div class="inner">
                <div class="flex flex-2">
                    <div class="col col2">
                        <h3>High Perfromance</h3>
                        <p>vrrooom vrrrom vrrroooo o ororo oro ro oror mmrororor oro rom ormor m orm</p>
                        <a href="#" class="button">Learn More</a>
                    </div>
                    <div class="col col1 first">
                        <div class="image round fit">
                            <a href="generic.html" class="link"><img src="~/Content/Porsche3.jpg" alt="" /></a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Section -->
        <section class="wrapper style2">
            <div class="inner">
                <header class="align-center">
                    <h2>Whats going on at Porsche!</h2>
                    <p>Check out our activity</p>
                </header>
                <div class="flex flex-3">
                    <div class="col align-center">
                        <div class="image round fit">
                            <img src="~/Content/Work.jpg" alt="" />
                        </div>
                        <h1>Todays Orders</h1>
                        <p>21 </p>
                        <a href="#" class="button">Learn More</a>
                    </div>
                    <div class="col align-center">
                        <div class="image round fit">
                            <img src="~/Content/HRate.png" alt="" />
                        </div>
                        <h1>Hourly Rate</h1>
                        <p>159.99</p>
                        <a href="#" class="button">Learn More</a>
                    </div>
                    <div class="col align-center">
                        <div class="image round fit">
                            <img src="~/Content/Meter.jpg" alt="" />
                        </div>
                        <h1>Todays WorkLoad</h1>
                        <p>Heavy</p>
                        <a href="#" class="button">Learn More</a>
                    </div>
                </div>
            </div>
        </section>

    </div>
    @if (User.IsInRole("mechanic"))
    {
        <p><a href=@Url.Action("Edit", "Shops")>Edit Shop</a></p>
    }

    <!-- Footer -->
    <!-- Scripts -->
    <script src="~/Scripts/ShopScript/jquery.min.js"></script>
    <script src="~/Scripts/ShopScript/jquery.scrolly.min.js"></script>
    <script src="~/Scripts/ShopScript/jquery.scrollex.min.js"></script>
    <script src="~/Scripts/ShopScript/skel.min.js"></script>
    <script src="~/Scripts/ShopScript/util.js"></script>
    <script src="~/Scripts/ShopScript/main.js"></script>

</body>
</html>

