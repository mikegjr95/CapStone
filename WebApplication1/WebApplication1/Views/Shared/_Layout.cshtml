<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header role="banner" class="probootstrap-header">
        <div class="container">
            <a href=@Url.Action("Index", "Home") class="probootstrap-logo">WrenchIt<span>.</span></a>
            <a href="#" class="probootstrap-burger-menu visible-xs"><i>Menu</i></a>
            <div class="mobile-menu-overlay"></div>

            <nav role="navigation" class="probootstrap-nav hidden-xs">
                @if (User.IsInRole("Customer"))
                {
                <ul class="probootstrap-main-nav">
                    <li class="active"><a href=@Url.Action("Index", "Home")>Home</a></li>
                    <li><a href=@Url.Action("Details", "Customers")>My Page</a></li>
                    <li><a href=@Url.Action("Index", "RepairOrders")>My Repairs</a></li>
                    <li><a href=@Url.Action("Index", "Mechanics")>Technician's</a></li>
                </ul>
                }
                @if (User.IsInRole("Mechanic"))
                {
            <ul class="probootstrap-main-nav">
                <li class="active"><a href=@Url.Action("Index", "Home")>Home</a></li>
                <li><a href=@Url.Action("Index", "Customers")>Customers</a></li>
                <li><a href=@Url.Action("Index", "RepairOrders")>My work orders</a></li>
                <li><a href=@Url.Action("Index", "Messages")>Inbox</a></li>
                <li><a href=@Url.Action("Index", "Shops")>Edit My Shop</a></li>
            </ul>
                }
                <div class="row">
                    <div class="col-md-12 text-md-right">
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>

            </nav>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer class="probootstrap-footer probootstrap-bg">
        <div class="container">
            <div class="row mb60">
                <div class="col-md-3">
                    <div class="probootstrap-footer-widget">
                        <h4 class="heading">About WrenchIt.</h4>
                        <p>This company's goal is to make a easier more convinient way to schedual/keep track of repairs for Mechanics or Customers! </p>
                        <p><a href="#">Read more...</a></p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="probootstrap-footer-widget probootstrap-link-wrap">
                        <h4 class="heading">Quick Links</h4>
                        <ul class="stack-link">
                            <li><a href="#">Home</a></li>
                            <li><a href="#">About</a></li>
                            <li><a href="#">Services</a></li>
                            <li><a href="#">Products</a></li>
                            <li><a href="#">Testimonial</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="probootstrap-footer-widget">
                        <h4 class="heading">More Links</h4>
                        <ul class="stack-link">
                            <li><a href="#">Projects</a></li>
                            <li><a href="#">Privacy</a></li>
                            <li><a href="#">Terms</a></li>
                            <li><a href="#">Career</a></li>
                            <li><a href="#">Support Help</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="probootstrap-footer-widget probootstrap-link-wrap">
                        <h4 class="heading">Subscribe</h4>
                        <p>Far far away behind the word mountains far from.</p>
                        <form action="#">
                            <div class="form-field">
                                <input type="text" class="form-control" placeholder="Enter your email">
                                <button class="btn btn-subscribe">Send</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row copyright">
                <div class="col-md-6">
                    <div class="probootstrap-footer-widget">
                        <p>&copy; 2017 <a href="#">WrenchIt</a>. Designed by <a href="#">M.G.3 Productions</a> <br>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="probootstrap-footer-widget right">
                        <ul class="probootstrap-social">
                            <li><a href="https://www.twitter.com"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="https://www.facebook.com"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="https://www.instagram.com"><i class="fa fa-instagram"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
