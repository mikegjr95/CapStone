@model WebApplication1.Models.FilterMechanic
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400" rel="stylesheet">
<link rel="stylesheet" href="~/Scripts/styles-merged.css">
<link rel="stylesheet" href="~/Scripts/style.min.css">
@{
    ViewBag.Title = "FilteredSearch";
}

<h2>FilteredSearch</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <table>
            <tr>
                <th>
                    <h4>Search Shops:</h4>
                </th>


                <td>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.SelectedShop, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.SelectedShop, Model.ListOfShops)
                            @Html.ValidationMessageFor(model => model.SelectedShop, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </td>



                <th>
                    <h4>Find Mechanics by Zip:</h4>
                </th>


                <td>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Zip, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.Zip, Model.SearchByZip)
                            @Html.ValidationMessageFor(model => model.Zip, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>

                </td>
            </tr>
        </table>
        <p>
            <a class="btn btn-primary" style="position:; color:lightgreen" @Html.ActionLink("Refresh Search", "FilteredSearch", "Mechanics")
        </p>
    </div>
}



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.mechanics[0].FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mechanics[0].LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mechanics[0].Shop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mechanics[0].Zip)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.mechanics)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.FirstName)
            </td>

            <td>
                @Html.DisplayFor(model => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(model => item.Shop)
            </td>

            <td>
                @Html.DisplayFor(model => item.Zip)
            </td>

            <td>
                <a class="btn btn-primary" style="color:yellow" @Html.ActionLink("Details", "Details", new { id = item.MechanicId }) |
            <a class="btn btn-primary"style="color:lightgreen" @Html.ActionLink("Message", "Create", "IMessage", new { id = item.ApplicationId }, null)
            </td>
        </tr>
    }

</table>